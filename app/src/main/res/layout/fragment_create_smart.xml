<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.truthdefender.goalgetters.goals.CreateSmartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="120dp"
        android:paddingTop="22dp"
        android:layout_marginBottom="20dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_goal_name"
            android:layout_width="110dp"
            android:layout_marginRight="6dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edittext_action"
                android:hint="@string/goal_action"
                android:inputType="textCapSentences"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingTop="12dp">
            <TextView
                android:id="@+id/amount"
                android:layout_width="120dp"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/number_picker_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/amount"
                android:layout_gravity="center"
                android:text="Set Amount"/>

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_units"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight=".5">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edittext_units"
                android:hint="@string/units"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</FrameLayout>
