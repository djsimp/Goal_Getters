<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.truthdefender.goalgetters">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:label="@string/main_label" />
        <activity
            android:name=".goals.CreateGoalActivity"
            android:label="@string/create_goal_label" />
        <activity
            android:name=".main.CreateAccountActivity"
            android:label="@string/title_activity_create_account" />
        <activity
            android:name=".goals.GoalActivity"
            android:label="@string/activity_goal_label" />
        <activity
            android:name=".goals.ReportProgressActivity"
            android:label="@string/report_progress_label" />
        <activity
            android:name=".main.SelectIconActivity"
            android:label="@string/select_icon_label"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".goals.CreateGroupActivity"
            android:label="@string/title_activity_create_group"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".goals.GroupActivity"
            android:label="@string/title_activity_groups"
            android:theme="@style/AppTheme" />
    </application>

</manifest>