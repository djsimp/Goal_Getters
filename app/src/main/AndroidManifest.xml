<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.truthdefender.goalgetters">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="org.truthdefender.goalgetters.main.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.truthdefender.goalgetters.main.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.truthdefender.goalgetters.main.MainActivity"
            android:label="@string/select_channel_type"/>
        <activity android:name="org.truthdefender.goalgetters.utils.PhotoViewerActivity" />
        <activity
            android:name="org.truthdefender.goalgetters.utils.MediaPlayerActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="org.truthdefender.goalgetters.openchannel.CreateOpenChannelActivity"
            android:label="@string/create_open_channel" />
        <activity
            android:name="org.truthdefender.goalgetters.groupchannel.InviteMemberActivity"
            android:label="@string/invite_member" />
        <activity
            android:name="org.truthdefender.goalgetters.groupchannel.MemberListActivity"
            android:label="@string/member_list" />
        <activity
            android:name="org.truthdefender.goalgetters.groupchannel.CreateGroupChannelActivity"
            android:label="@string/create_group_channel" />
        <activity
            android:name="org.truthdefender.goalgetters.openchannel.ParticipantListActivity"
            android:label="@string/participant_list" />
        <activity android:name="org.truthdefender.goalgetters.openchannel.OpenChannelActivity" />
        <activity android:name="org.truthdefender.goalgetters.groupchannel.GroupChannelActivity" />

        <service android:name="org.truthdefender.goalgetters.fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="org.truthdefender.goalgetters.fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>